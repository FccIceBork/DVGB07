<Page
    x:Class="Kalkylator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kalkylator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="500" Height="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="LightGray"></Rectangle>
        <Rectangle Grid.Row="1" Fill="LightGray"></Rectangle>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox x:ConnectionId='18' Name="Kalkylator_ruta1" Grid.Row="0" Height="40" Width="400" FontWeight="Bold" FontSize="20" Margin="0,10,0,0" BorderThickness="0" AllowFocusOnInteraction="False" IsReadOnly="True"></TextBox>
            <TextBox x:ConnectionId='19' Name="Kalkylator_ruta2" Grid.Row="1" Height="60" Width="400" FontWeight="Bold" FontSize="40" Margin="0,0,0,0" BorderThickness="0" AllowFocusOnInteraction="False" IsReadOnly="True"></TextBox>
        </Grid>
        <Grid Grid.Row="1" Margin="50,10,50,10" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='2' Name="One" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="0" Grid.Column="0" Width="80" Height="80" Background="White" BorderBrush="Black"                   Foreground="Black">1</Button>
            <Button x:ConnectionId='3' Name="Two" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="0" Grid.Column="1" Width="80" Height="80" Background="White" BorderBrush="Black"                   Foreground="Black">2</Button>
            <Button x:ConnectionId='4' Name="Three" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="0" Grid.Column="2" Width="80" Height="80" Background="White" BorderBrush="Black"                     Foreground="Black">3</Button>
            <Button x:ConnectionId='5' Name="Add" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="0" Grid.Column="3" Width="80" Height="80" Background="White" BorderBrush="Black"                   Foreground="Black">+</Button>
            <Button x:ConnectionId='6' Name="Four" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="1" Grid.Column="0" Width="80" Height="80" Background="White" BorderBrush="Black"                    Foreground="Black">4</Button>
            <Button x:ConnectionId='7' Name="Five" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="1" Grid.Column="1" Width="80" Height="80" Background="White" BorderBrush="Black"                    Foreground="Black">5</Button>
            <Button x:ConnectionId='8' Name="Six" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="1" Grid.Column="2" Width="80" Height="80" Background="White" BorderBrush="Black"                   Foreground="Black">6</Button>
            <Button x:ConnectionId='9' Name="Sub" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="1" Grid.Column="3" Width="80" Height="80" Background="White" BorderBrush="Black"                   Foreground="Black">-</Button>
            <Button x:ConnectionId='10' Name="Seven" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="2" Grid.Column="0" Width="80" Height="80" Background="White" BorderBrush="Black"                     Foreground="Black">7</Button>
            <Button x:ConnectionId='11' Name="Eight" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="2" Grid.Column="1" Width="80" Height="80" Background="White" BorderBrush="Black"                     Foreground="Black">8</Button>
            <Button x:ConnectionId='12' Name="Nine" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="2" Grid.Column="2" Width="80" Height="80" Background="White" BorderBrush="Black"                    Foreground="Black">9</Button>
            <Button x:ConnectionId='13' Name="Mul" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="2" Grid.Column="3" Width="80" Height="80" Background="White" BorderBrush="Black"                   Foreground="Black">x</Button>
            <Button x:ConnectionId='14' Name="C" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="3" Grid.Column="0" Width="80" Height="80" Background="White" BorderBrush="Black"                 Foreground="Black">C</Button>
            <Button x:ConnectionId='15' Name="Zero" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="3" Grid.Column="1" Width="80" Height="80" Background="White" BorderBrush="Black"                    Foreground="Black">0</Button>
            <Button x:ConnectionId='16' Name="Sum" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="3" Grid.Column="2" Width="80" Height="80" Background="White" BorderBrush="Black"                   Foreground="Black">=</Button>
            <Button x:ConnectionId='17' Name="Div" HorizontalAlignment="Center" FontWeight="Bold" FontSize="35" Grid.Row="3" Grid.Column="3" Width="80" Height="80" Background="White" BorderBrush="Black"                   Foreground="Black">/</Button>
        </Grid>
    </Grid>
</Page>

